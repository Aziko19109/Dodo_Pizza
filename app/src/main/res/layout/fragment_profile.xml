<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/c"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfileFragment">

   <!-- TODO: Update blank fragment layout -->
   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:gravity="center"
       android:background="@color/orange">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="serif"
          android:text="@string/profile"
          android:textColor="@color/white"
          android:textSize="24sp"
          android:textStyle="bold"
          tools:layout_editor_absoluteX="155dp"
          tools:layout_editor_absoluteY="18dp" />

   </androidx.appcompat.widget.Toolbar>

   <TextView
       android:id="@+id/nameTextView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="24dp"
       android:layout_marginTop="12dp"
       android:text="Привет, Азиз!"
       android:textSize="24sp"
       android:textColor="@color/black"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/toolbar" />

   <TextView
       android:id="@+id/textView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="24dp"
       android:layout_marginEnd="56dp"
       android:layout_marginTop="12dp"
       android:text="Это ваш личный кабинет. Здесь вы можете управлять своими заказами, редактировать личные данные"
       android:textSize="14sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

   <LinearLayout
       android:id="@+id/historyLiner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:backgroundTint="@color/white"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:src="@drawable/baseline_history_24" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="История заказов"
          android:gravity="center_vertical"
          android:paddingStart="5dp"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:src="@drawable/ic_right"
        />

   </LinearLayout>

   <LinearLayout
       android:id="@+id/lichnieLiner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:backgroundTint="@color/white"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/historyLiner">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:src="@drawable/baseline_person_24" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="Личные данные"
          android:gravity="center_vertical"
          android:paddingStart="5dp"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:src="@drawable/ic_right"
          />

   </LinearLayout>

   <LinearLayout
       android:id="@+id/aboutLiner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:backgroundTint="@color/white"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/lichnieLiner">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:src="@drawable/baseline_info_24" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="О нас"
          android:gravity="center_vertical"
          android:paddingStart="5dp"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:src="@drawable/ic_right"
          />

   </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>